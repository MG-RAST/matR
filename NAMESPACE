# CLASS AND METHOD EXPORTS
# our S3 classes: metadata
# our S4 classes: sigtest, selection, collection
exportClassPattern(".*")

exportMethods (print, summary, show)
exportMethods ("[[", "$", "[[<-", "$<-")
exportMethods (samples, names, "names<-", groups, "groups<-", rownames, metadata, 
							 views, viewnames, "viewnames<-", selection, collection)

exportMethods (dist)
export (normalize, remove.singletons, randomize, sigtest)

exportMethods (boxplot, pco, heatmap, parcoord, render, asFile)

S3method (print, metadata)
S3method (summary, metadata)
S3method (`[`, metadata)
S3method (print, selection)
S3method (summary, selection)
S3method (print, collection)
S3method (summary, collection)
